FROM python:3.11-slim

WORKDIR /app

# Install system deps (optional but useful)
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

COPY requirements_ollama.txt ./requirements.txt
RUN pip install --no-cache-dir -r requirements.txt

# Copy everything (including Excel) into container
COPY . /app

EXPOSE 8501

# Streamlit config: listen on all interfaces
CMD ["streamlit", "run", "app_ollama.py", "--server.port=8501", "--server.address=0.0.0.0"]
